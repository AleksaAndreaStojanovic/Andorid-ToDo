<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/dodajzapis"
            android:drawablePadding="8dp"
            android:rotationY="0"
            android:text="Beleske"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"

            android:text="Naslov" />

        <EditText
            android:id="@+id/txtNaslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unesite naslov.."
            android:textColorHint="@color/purple_200"
            android:textColor="@color/purple_200"
            android:ems="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"

            android:text="Opis" />

        <EditText
            android:id="@+id/txtOpis"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:ems="10"
            android:hint="Unesite opis.."
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"

            android:text="Datum" />

        <EditText
            android:id="@+id/txtDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unsite datum.."
            android:textColorHint="@color/purple_200"
            android:textColor="@color/purple_200"
            android:ems="10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_200"
            android:backgroundTint="@color/black"
            android:onClick="datum"
            android:text="Izaberi datum" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"

            android:text="Vreme" />

        <EditText
            android:id="@+id/txtVreme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/purple_200"
            android:hint="Unesite vreme.."
            android:textColorHint="@color/purple_200"
            android:ems="10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/purple_200"
            android:backgroundTint="@color/black"
            android:onClick="vreme"
            android:text="Izaberi vreme"
            />


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/purple_200"
            android:backgroundTint="@color/black"
            android:onClick="dodaj"
            android:text="Dodaj" />

        <!--<Button
        android:id="@+id/btnRetrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="prikazi"
        android:layout_marginTop="3dp"
        android:text="Prikazi"
        android:backgroundTint="@color/black"

        />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="izmeni"
        android:layout_marginTop="3dp"
        android:text="Izmeni"
        android:backgroundTint="@color/black"


        />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="obrisi"
        android:layout_marginTop="3dp"
        android:text="Obrisi"
        android:backgroundTint="@color/black"

        />-->


    </LinearLayout>

</ScrollView>